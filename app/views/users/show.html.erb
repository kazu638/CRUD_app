<p class="notice-message"><%= flash[:notice] if flash[:notice].present? %></p>

<div class="show-wrap">
  <h2>ユーザー詳細情報</h2>
  <table>
    <tr><th>ID</th><td><%= @user.id %></td></tr>
    <tr><th>名前</th><td><%= @user.name %></td></tr>
    <tr><th>年齢</th><td><%= @user.age %></td></tr>
    <tr><th>メッセージ</th><td><%= @user.message %></td></tr>
  </table>
  <%= link_to "編集", edit_user_path(@user.id) %>
  <%= link_to "削除", user_path(@user.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  <%= link_to "ユーザー一覧画面", users_path %>
</div>