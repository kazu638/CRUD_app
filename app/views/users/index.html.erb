<p class="notice-message"><%= flash[:notice] if flash[:notice].present? %></p>

<div class="userlist-wrap">
  <h2>ユーザー一覧画面</h2>
  <% if @users.present? %>
      <table>
        <tr>
          <th>ID</th><th>名前</th><th>年齢</th><th colspan="3">操作</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= link_to "詳細", user_path(user.id) %></td>
            <td><%= link_to "編集", edit_user_path(user.id) %></td>
            <td><%= link_to "削除", user_path(user.id), method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
          </tr>        
        <% end %>
      </table>    
  <% else %>
    <p>登録されているユーザーはいません。</p>
  <% end %>
</div>

<p class="link"><%= link_to "登録フォームへ", new_user_path %></p>